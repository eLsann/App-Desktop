# ==============================================
# ABSENSI DESKTOP - ENVIRONMENT CONFIGURATION
# ==============================================
# ⚠️ COPY this file to .env and fill in YOUR OWN values
# ⚠️ NEVER commit the .env file to Git!

# ==============================================
# API SERVER CONNECTION
# ==============================================
API_BASE=http://localhost:8000

# ⚠️ Get these from your API admin
DEVICE_ID=YOUR_DEVICE_ID
DEVICE_TOKEN=YOUR_DEVICE_TOKEN

# ==============================================
# CAMERA SETTINGS
# ==============================================
CAM_INDEX=0
REQUEST_INTERVAL=1.0

# ==============================================
# TEXT-TO-SPEECH
# ==============================================
EDGE_VOICE=id-ID-GadisNeural

# ==============================================
# PERFORMANCE
# ==============================================
MAX_FPS=30
API_TIMEOUT=10

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO
